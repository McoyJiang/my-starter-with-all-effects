<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <HorizontalScrollView
        android:id="@+id/previews_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dip"
        android:fadingEdgeLength="5dip"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/shortcut_previews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dip" />
    </HorizontalScrollView>
 	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        <Button 
            android:id="@+id/quickAppsBtn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:clickable="true"
                android:background="@drawable/tab_unselected_holo"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:text="@string/quick_apps"/>
        <Button 
            android:id="@+id/quickShortcutsBtn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:clickable="true"
                android:background="@android:color/transparent"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:text="@string/quick_shortcuts"/>
        <Button 
            android:id="@+id/quickWidgetsBtn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:clickable="true"
                android:background="@android:color/transparent"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:text="@string/quick_widgets"/>
       </LinearLayout>/
       
     <GridView
        android:id="@+id/quickAppsView"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="5"
        android:visibility="visible"
        android:paddingBottom="20dp"
     />
     
    <GridView
        android:id="@+id/quickShortcutsView"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="5"
        android:visibility="gone"
        android:paddingBottom="20dp"
     />
    
     <GridView
        android:id="@+id/quickWidgetsView"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="5"
        android:visibility="gone"
        android:paddingBottom="20dp"
     />
    <!--HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:layout_marginTop="16dip"
        android:fadingEdgeLength="5dip"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/widgets"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dip" />
    </HorizontalScrollView-->
    
</LinearLayout>